<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4" >

        <TextView
            android:id="@+id/txt_HeadingIF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueDarker"
            android:text="@string/If"
            android:textColor="@color/BlueLighter"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_Sensor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueDarker" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueDarker"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Spinner
                android:id="@+id/spinner_IfStage1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/BlueDarker" />

            <Spinner
                android:id="@+id/spinner_IfStage1_Part2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/spinner_IfStage1"
                android:background="@color/BlueDarker"
                android:paddingLeft="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueDarker"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/txt_for"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ifThisThenThatLeftPadding"
                android:text="@string/For"
                android:textColor="@color/BlueLighter"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_TimeValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_for"
                android:background="@color/BlueDarker"
                android:paddingLeft="5sp" />

            <Spinner
                android:id="@+id/spinner_TimeUnit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/spinner_TimeValue"
                android:background="@color/BlueDarker"
                android:paddingLeft="5sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/txt_HeadingTHEN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C8C77"
            android:height="0dp"
            android:text="@string/then"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#62c1a2"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>